import("/javascripts/phone_input_international.js").then(
    function (pii) {
        let handle = pii.attach("telephone-input", document)[0];

        handle.onChange(function (event, id, element, valid, normalized) {
            console.log("PII Event starting");
            console.log(event);
            console.log(id);
            console.log(element);
            console.log(valid);
            console.log(normalized);
            console.log("PII Event complete");
        });
    }
);
</script>
